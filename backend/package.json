{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/src/index.js",
    "dev": "tsx --watch --env-file=.env src/index.ts",
    "test": "node --env-file=.env node_modules/jest/bin/jest.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@google/genai": "^1.42.0",
    "@types/pg": "^8.16.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "pg": "^8.18.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^27.5.2",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^27.5.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@google/genai$": "<rootDir>/tests/__mocks__/@google/genai.ts"
    }
  }
}
